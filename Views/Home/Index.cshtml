@using fullstack_portfolio.Models.ViewModels
@model HomeViewModel

@{
var context = (HttpContext)Context;
string CurrentUrl = $"{context.Request.Scheme}://{context.Request.Host}{context.Request.Path}";
}

<partial name="_Hero.cshtml"></partial>
<partial name="_AboutMe.cshtml" model="@Model.Bio"></partial>
<partial name="_Expertise.cshtml" model="@Model.Expertises"></partial>
<partial name="_Skills.cshtml" model="@Model.Skills"></partial>
<partial name="_Portfolio.cshtml" model="@Model.Portfolio"></partial>
<partial name="_Experience.cshtml" model="@Model.Experience"></partial>
<partial name="_Contacts.cshtml" model="@Model.ContactsViewModel"></partial>

@section Scripts {
	<script src="~/_framework/blazor.server.js"></script>
}

@section MetaTags {
  <meta name="description" content="Looking for a developer? You've got the right place! I am Saku, a fullstack software engineer">
  <meta name="og:description" content="Looking for a developer? You've got the right place! I am Saku, a fullstack software engineer">
  <meta name="og:title" content="Portfolio - Saku Karttunen">
  <meta name="keywords" content="Saku Karttunen, Portfolio, Fullstack Developer, Software Engineer, Finland">
  <meta name="robots" content="index, follow">
  <link rel="canonical" href="@CurrentUrl">
}
