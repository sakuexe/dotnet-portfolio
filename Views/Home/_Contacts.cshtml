@using fullstack_portfolio.Models;
@using System.Text.RegularExpressions;
@model ContactInfo

@{
  // first group is http:// or https://
  // second group is the domain
  string pattern = @"(^https?://)([^/]*)";
  Regex rg = new Regex(pattern);

  string GetBrand(string link)
  {
    // get the second group of regex (the main domain)
    string domain = rg.Match(link).Groups[2].Value;
    Console.WriteLine(domain);
    string business = domain.Split(".")[^2];
    return business;
  }
}

