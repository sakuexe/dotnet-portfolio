@using fullstack_portfolio.Models
@model IEnumerable<Expertise>

@{
  string GetIcon(string iconUrl)
  {
    // check if the file exists
    if (!System.IO.File.Exists(iconUrl))
      return "icons/default.svg";
    return iconUrl.Split("wwwroot")[1];
  }
}

  <section id="expertise">
    <div class="subheader text-center mb-8">
      <p><span>// 02</span> Expertise</p>
      <h2>What Do I Do?</h2>
    </div>
    <div class="flex flex-wrap gap-4 justify-center">

      @foreach (var expertise in Model)
      {
      <!-- TODO: Fetch experiences from the database -->
      <div class="flex flex-col outline outline-2 outline-primary-300 
      max-w-md p-6 space-y-3 drop-shadow-lg backdrop-brightness-90 backdrop-blur-sm">
        <!-- card header -->
        <div class="flex items-center gap-x-5">
          <img src="@GetIcon(expertise.Icon)" alt="@expertise.Title -icon" class="w-16" >
          <h3 class="text-3xl font-bold">
            @expertise.Title
          </h3>
        </div>
        <div class="flex gap-x-3">
          <!-- the html indenting style -->
          <div class="opacity-75 flex flex-col items-center mr-auto select-none">
            <pre>&lt;p&gt;</pre>
            <div class="h-full border border-primary-100 opacity-75"></div>
            <pre>&lt;/p&gt;</pre>
          </div>
          <!-- card description -->
          <p class="py-6 w-full">
            @expertise.Description
          </p>
        </div>
      </div>
      }

    </div>
    <div class="absolute top-0 left-0 w-full h-full -z-10 bg-primary opacity-75 mix-blend-darken"></div>
  </section>

  <style>
    #expertise {
      position: relative;
      isolation: isolate;
      background: url("/images/code.png") no-repeat -1rem center;
      background-size: cover;
      /* parallax effect */
      background-attachment: fixed;
      box-shadow: inset 0 0 4rem theme("colors.primary.DEFAULT");
    }
  </style>
